    <div style="width: 100%;">
        <form
            class="d-lg-flex flex-shrink-1 flex-fill justify-content-around align-content-around align-self-center align-items-lg-center"
            style="margin: 0px auto; margin-top: 18px; width: 92%;" action="/users/{{profiles.id}}?_method=PUT"
            method="PUT">
            {{!-- <input type="hidden" name="_id" value="{{profiles.id}}"> --}}
            <div class="form-row" style="margin: 0; margin-right: 30px; margin-left: 4px; width: 100%;">
                <div class="form-group col-md-12">
                    <label data-toggle="tooltip" data-bs-tooltip="" data-placement="right"
                        title="the full name will be use for the profile page" style="
                font-family: Poppins, sans-serif;
                font-size: 17px;
                color: rgb(23, 24, 55);
                margin: 0;
              " for="firstname"><strong>Firstname</strong></label>
                    <input class="shadow form-control" type="text" id="firstname" style="width: 100%;" name="name"
                        placeholder="Yusuf" required="" minlength="2" value="{{profiles.name}}" />
                </div>
                <div class="form-group col-md-12">
                    <label style="
                font-family: Poppins, sans-serif;
                font-size: 17px;
                color: rgb(23, 24, 55);
              " for="lastname"><strong>Lastname</strong></label><input class="shadow form-control" type="text"
                        id="lastname" style="width: 100%;" name="lastname" placeholder="Bolaji" required=""
                        minlength="4" value="{{profiles.lastname}}" />
                </div>
                <div class="form-group col-md-12">
                    <label style="
                font-family: Poppins, sans-serif;
                font-size: 17px;
                color: rgb(23, 24, 55);
                margin: 0;
              " for="othername"><strong>Othername</strong></label><input class="shadow form-control" type="text"
                        id="othername" style="width: 100%;" name="othername" placeholder="Waheed"
                        value="{{profiles.othername}}" required="" minlength="2" />
                </div>
                <div class="form-group col-md-12">
                    <label class="border-success shadow-sm" style="
                font-family: Poppins, sans-serif;
                font-size: 17px;
                color: rgb(23, 24, 55);
                margin: 0;
              " for="othername"><strong>Occupation</strong><br /></label><input class="shadow form-control" type="text"
                        id="othername-1" style="width: 100%;" name="occupation"
                        placeholder="Financial Analyst, Software Developer" inputmode="verbatim" required=""
                        autofocus="" minlength="3" value="{{profiles.occupation}}" />
                </div>
                <div class="form-group col-md-6">
                    <label data-toggle="tooltip" data-bs-tooltip="" data-placement="right"
                        title="the full name will be use for the profile page" style="
                font-family: Poppins, sans-serif;
                font-size: 17px;
                color: rgb(23, 24, 55);
                margin: 0;
              " for="email"><strong>Email</strong><br /></label>
                    <input class="shadow form-control" type="email" data-toggle="tooltip" data-bs-tooltip="" id="email"
                        name="email" multiple="" autofocus="" required="" title='You can enter multiple email with ", "'
                        value="{{profiles.email}}" />
                </div>
                <div class="form-group col-md-6">
                    <label data-toggle="tooltip" data-bs-tooltip="" data-placement="right"
                        title="the full name will be use for the profile page" style="
                font-family: Poppins, sans-serif;
                font-size: 17px;
                color: rgb(23, 24, 55);
                margin: 0;
              " for="phone"><strong>Phone No.</strong><br /></label>
                    <input class="shadow form-control" type="tel" data-toggle="tooltip" data-bs-tooltip="" id="phone"
                        title='You can enter multiple number wit ", "' required="" name="phone"
                        value="{{profiles.phone}}" />
                </div>
            </div>
            <div class="d-lg-flex justify-content-lg-start align-items-lg-start form-row"
                style="margin: 0; margin-right: 0; width: 100%;">
                <div class="form-group col-md-12" style="margin: 0; padding: 0;">
                    <label title="the full name will be use for the profile page" style="
                font-family: Poppins, sans-serif;
                font-size: 17px;
                color: rgb(23, 24, 55);
                margin: 0;
              " for="about"><strong>Write About you</strong><br /></label><textarea class="shadow-lg form-control"
                        cols="0" style="width: 100%; padding: 0;" rows="5" name="about" required=""
                        minlength="100">{{profiles.about}}</textarea>
                </div>
                <div class="form-group col-md-6" data-toggle="tooltip" data-bs-tooltip="" data-placement="bottom"
                    style="margin-top: 15px;" title="input facebook profile link ">
                    <label data-toggle="tooltip" data-bs-tooltip="" data-placement="right"
                        title="the full name will be use for the profile page" style="
                font-family: Poppins, sans-serif;
                font-size: 17px;
                color: rgb(23, 24, 55);
                margin: 0;
              " for="facebook"><strong>Facebook link</strong><br /></label>
                    <input class="shadow form-control" type="text" id="facebook" style="width: 100%;"
                        inputmode="verbatim" required="" autofocus="" minlength="3" name="facebook"
                        value="{{profiles.facebook}}" />
                </div>
                <div class="form-group col-md-6" style="margin-top: 15px;">
                    <label data-toggle="tooltip" data-bs-tooltip="" data-placement="right"
                        title="input Linkedin profile link" style="
                font-family: Poppins, sans-serif;
                font-size: 17px;
                color: rgb(23, 24, 55);
                margin: 0;
              " for="linkedin"><strong>Linkedin link</strong><br /></label>
                    <input class="shadow form-control" type="text" id="linkedin" style="width: 100%;"
                        inputmode="verbatim" required="" autofocus="" minlength="3" name="linkedin"
                        value="{{profiles.linkedin}}" />
                </div>
                <div class="form-group col-md-6" style="margin-top: 0px;">
                    <label data-toggle="tooltip" data-bs-tooltip="" data-placement="right"
                        title="the full name will be use for the profile page" style="
                font-family: Poppins, sans-serif;
                font-size: 17px;
                color: rgb(23, 24, 55);
                margin: 0;
              " for="twitter"><strong>Twitter link</strong><br /></label>
                    <input class="shadow form-control" type="text" id="twitter" style="width: 100%;"
                        inputmode="verbatim" required="" autofocus="" minlength="3" name="twitter"
                        value="{{profiles.twitter}}" />
                </div>
                <div class="form-group col-md-6" style="margin-top: 0px;">
                    <label data-toggle="tooltip" data-bs-tooltip="" data-placement="right"
                        title="the full name will be use for the profile page" style="
                font-family: Poppins, sans-serif;
                font-size: 17px;
                color: rgb(23, 24, 55);
                margin: 0;
              " for="phone"><strong>other link</strong><br /></label>
                    <input class="shadow form-control" type="text" id="otherslink" style="width: 100%;"
                        inputmode="verbatim" required="" autofocus="" minlength="3" name="other"
                        value="{{profiles.other}}" />
                </div>
                <div class="form-group col-md-6" style="margin: 0;padding: 0;margin-bottom: 0px;"><label
                        data-toggle="tooltip"
                        style="font-family: Poppins, sans-serif;font-size: 17px;color: rgb(23,24,55);margin: 0;margin-top: 13px;"
                        for="image" title="Image must be large to fit properly"><strong>Upload  profile
                            picture</strong><br /></label><input type="file" id="image" name="image" required
                        accept="image/*" /></div>
                <div class="form-group col-md-6" style="margin: 0;padding: 0;margin-bottom: 10px;"><label
                        data-toggle="tooltip"
                        style="font-family: Poppins, sans-serif;font-size: 17px;color: rgb(23,24,55);margin: 0;margin-top: 13px;"
                        for="resume" title="Image must be large to fit properly"><strong>Upload  profile
                            picture</strong><br /></label><input type="file" id="resume" name="resume" required
                        accept="image/*" /></div>
                <button class="btn btn-primary btn-lg" type="submit" style="
              margin-right: 0px;
              margin-left: 0;
              background-color: rgb(23, 24, 55);
            ">
                    Save
                </button>
                <a href="/profile"
                    class="btn btn-primary btn-lg d-lg-flex justify-content-lg-center align-items-lg-center"
                    role="button" style="margin-right: 0px;margin-left: 12px;background-color: rgb(0,221,221);">Launch
                    Profile</a>
            </div>
        </form>
    </div>
